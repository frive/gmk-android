<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.App"
      parent="Theme.Base.App">
  </style>

  <style name="Theme.App.NoActionBar"
      parent="Theme.Base.App">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.Base.App"
      parent="Theme.AppCompat.Light">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/primary_accent</item>
    <item name="android:windowBackground">@color/window_background</item>
  </style>

  <style name="App.TabLayout"
      parent="Widget.Design.TabLayout">
    <item name="tabMaxWidth">@dimen/tab_max_width</item>
    <item name="tabIndicatorColor">@color/primary_accent</item>
    <item name="tabIndicatorHeight">2dp</item>
    <item name="tabPaddingStart">12dp</item>
    <item name="tabPaddingEnd">12dp</item>
  </style>

</resources>
